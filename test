 * 
 * Calculate the greatest common divisor of pairs of numbers. prompt the use for
 * the number of pairs then prompt user for 2 non 0 whole numbers. Output the 
 * greatest common divisor for each pair.
 */
import java.util.Scanner;

public class FindGCD 
{
    public static void main(String[] args) 
    {
        Scanner scan = new Scanner(System.in);
        int numPairs, num1, num2, gcdOut;
        String displayResults = "";
        
        //Get the number of pairs the user wants to input. 
        System.out.print("Compute the Greatest Common Divisor\n---------------"
                + "--------------------\n\nHow many pairs of numbers do you "
                + "want to enter?: ");
        numPairs = scan.nextInt();
        
        //Give instructions to enter only non 0 whole numbers.
        System.out.print("\n** Please enter non 0 whole numbers only **\n");
        
        //Loop to output the greatest common divisor for each pair of numbers
        //entered. Calls to method getGcd().
        while (numPairs > 0)
        {
            System.out.print("\nEnter number 1: ");
            num1 = scan.nextInt();
            //If user enters 0 prompt for another number.
            while (num1 == 0)
            {
                System.out.print("Please enter a whole number that is not 0: ");
                num1 = scan.nextInt();
            }
            System.out.print("Enter number 2: ");
            num2 = scan.nextInt();
            //If user enters 0 prompt for another number.
            while (num2 == 0)
            {
                System.out.print("Please enter a whole number that is not 0: ");
                num2 = scan.nextInt();
            }
            
            gcdOut = getGcd(num1, num2);
            
            //Update output with next pair
            displayResults = displayResults+"Number 1: "+num1+"\tNumber 2: "
                    + ""+num2+"\tGCD: "+gcdOut+"\n";
            numPairs--;
        }
        //Display results.
        System.out.print("\nResults\n-------\n"+displayResults+"\n");
    }
    
    //getGcd() method: Calculate the greatest common divisor with Euclid's 
    //division algorithm.
    //@param int number1 and int number2
    //@return int gcdReturn
    public static int getGcd(int number1, int number2)
    {
        int a, b, c;
        int gcdReturn;
        
        if (number1 < number2)
        {
            a = number2;
            b = number1;
        }
        else
        {
            a = number1;
            b = number2;
        }
        
        c = a % b;
        while (c != 0)
        {
            a = b;
            b = c;
            c = a % b;
        }   
        
        gcdReturn = b;
        return gcdReturn;
    }
}
